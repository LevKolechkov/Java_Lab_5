<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.lab_5.ThrowerController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Первое поле для ввода -->
    <TextField fx:id="firstTextField"/>

    <!-- Кнопка с динамической стрелкой -->
    <Button fx:id="swapButton" text="⟶" onAction="#swapText"/>

    <!-- Второе поле для ввода -->
    <TextField fx:id="secondTextField"/>

</VBox>