<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.lab_5.WidgetsController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <TextField fx:id="textField" promptText="Меня видно"/>
    <CheckBox text="Показать/Скрыть текстовое поле" onAction="#toggleTextFieldVisibility"/>

    <Button fx:id="button" text="Меня видно"/>
    <CheckBox text="Показать/Скрыть кнопку" onAction="#toggleButtonVisibility"/>

    <Label fx:id="label" text="Меня видно"/>
    <CheckBox text="Показать/Скрыть надпись" onAction="#toggleLabelVisibility"/>

</VBox>
