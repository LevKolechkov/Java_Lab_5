<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.lab_5.OrderController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <GridPane hgap="10" vgap="10">

        <Label text="Блюдо" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="Цена" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Количество порций" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

        <CheckBox fx:id="dish1CheckBox" text="Борщ" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label text="500 ₽" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Spinner fx:id="dish1Spinner" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

        <CheckBox fx:id="dish2CheckBox" text="Пельмеши" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label text="300 ₽" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Spinner fx:id="dish2Spinner" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

        <CheckBox fx:id="dish3CheckBox" text="Салат" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label text="200 ₽" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Spinner fx:id="dish3Spinner" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

    </GridPane>

    <Button text="Оформить заказ" onAction="#placeOrder"/>

</VBox>
